<!--Login-->

<div class="p-4 flex flex-row gap-6 w-[75%] items-center shadow-xl rounded-xl bg-[#E0D2C7]">
  <div class="text-center tracking-[2vw] text-[#44B09E] font-bold">
    <h2 id="page-title text-center">Login Page</h2>
  </div>
  <div class=" border h-[35vh] border-white"></div>
  <form class="form login-form flex flex-col items-center gap-6 flex-1">

    <div class="form-group mt-3 w-full">
        <fieldset class="border-2 border-[#44B09E] text-white rounded-xl">
      <legend for="username-login" class="font-semibold mx-2">Username</legend>
      <input class="form-input bg-transparent outline-none p-2 w-full" type="text" id="username-login" />
        </fieldset>
    </div>

    <div class="form-group mt-3 w-full">
        <fieldset class="border-2 text-white border-[#44B09E] rounded-xl">
      <legend for="password-login" class="font-semibold mx-2">Password</legend>
      <input class="form-input bg-transparent outline-none p-2 w-full" type="password" id="password-login" />
        </fieldset>
    </div>

    <div class="form-group mt-3">
      <button id="login" class="text-white bg-[#44B09E] hover:shadow-lg hover:bg-emerald-400 rounded-2xl p-2 px-6" type="submit">Login</button>
    </div>

    <a class="hover:text-white font-medium text-blue-800 hover:bg-emerald-400 px-6 py-1 rounded-2xl" href="/users/signup">Register here</a>
  </form>

</div>

<script src="/js/login.js"></script>