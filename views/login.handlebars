<!--Login-->
<div class="row">
    <div class="w-50 col-md-8 mx-auto loginBackground">
        <h2 id="page-title">Login</h2>

<div class="p-4 flex flex-row gap-6 w-[75%] items-center shadow-xl rounded-xl bg-[#E0D2C7]">
  <div class="text-center tracking-[2vw] text-[#44B09E] font-bold">
    <h2 id="page-title text-center">Login Page</h2>
  </div>
  <div class=" border h-[35vh] border-white"></div>
  <form class="form login-form flex flex-col items-center gap-6 flex-1">

            <div class="form-group mt-3">
                <div class="input-group align-items-center">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    <input class="form-control form-control-lg rounded-pill" type="text" id="username-login"
                        placeholder="Username" />
                </div>
            </div>

            <div class="form-group mt-3">
                <div class="input-group align-items-center">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    </div>
                    <input class="form-control form-control-lg rounded-pill" type="password" id="password-login"
                        placeholder="Password" />
                </div>
            </div>

            <div class="form-group mt-4">
                <button id="login" class="btn btn-primary" type="submit">Login</button>
            </div>

    <a class="hover:text-white font-medium text-blue-800 hover:bg-emerald-400 px-6 py-1 rounded-2xl" href="/users/signup">Register here</a>
  </form>

        <div class="signup-link">
            <br>
            <a href="/users/signup">Don't have an account? Register here!</a>
        </div>

    </div>

    <script src="/js/login.js"></script>
</div>