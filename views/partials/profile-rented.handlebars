{{!-- Partial to display the products the the user borrowed/requested to borrow, will be displayed in profile --}}
<div class="col-md-3 mb-4">
    <div class="card h-100">
        <img class="card-img-top" src="{{ gear.image_url }}" alt="{{ gear.product_name }}">
        <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{ gear.product_name }}</h5>
            {{#if (check_denied status)}}
            <p class="card-text mb-0">This request has been denied!</p>
            <button data-id="{{id}}" class="btn btn-danger deleteButton">Remove Request</button>
            {{else if (check_received status)}}
            <button data-id="{{id}}" data-gear="{{gear.id}}" data-lender="{{gear.owner_id}}" class="btn btn-primary returnButton">Return Item</button>
            {{else}}
            <p>Awaiting owners approval!</p>
            {{/if}}
        </div>
    </div>
</div>